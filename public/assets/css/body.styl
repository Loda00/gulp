.button
    position: absolute
    width: 80px
    height 30px
    border-radius: 5px
    background-color: #EC7A09
    right : 20px
    span 
        transform: translateX(8px)
        display: block
        line-height: 30px
        .titleButton
            font-family: Boogaloo
            color: black
            text-decoration: none
.loading
    width 38px
    height 38px
    background-color white
    display block
    margin: 0 auto
    .circle-parent
        position relative
        background linear-gradient(#248DCD,white) 
        border-radius 50%
        width 35px
        height 35px
        text-align center
        animation load .3s infinite
        .circle-child
            position: absolute
            background-color white
            border-radius: 50%
            left 2.5
            top 2.5
            padding: 5px
            width 29px
            height 29px

@keyframes load{

    0%{
        transform: rotate(0deg)
    }
    50%{
        transform: rotate(180deg)
    }
    100%{
        transform: rotate(360deg)
    } 
}



        

